<h1 style="text-align:center"> Edit Comment </h1>
<h3> Post Title: <%= @post.title %> </h3>
<h3> Post Body:</h3>  
<h4> <%= @post.body %> </h4>
            
            

<%= form_with model: [@post, @comment] do |f| %>
    <div id="title_edit">
        <%= f.text_field :body %>
    </div>
    
    <br />
    <br />
    <%= f.button :Save, :style =>'color:white;background-color:darkgreen;border-radius:10px'  %>
    <%= button_tag "Undo Changes", :type => 'reset',:style =>'color:white;background-color:rgb(53, 53, 219);border-radius:10px' %>
     
<% end %>