<div id="edit_comment">
<h1> Edit Comment </h1>
<h3> Post Title: <%= @post.title %> </h3>
<h3> Post Body:</h3>  <h4> <%= @post.body %> </h4>
            
            
<div id="body_comment_edit">
<%= form_with model: [@post, @comment] do |f| %>
    <div id="title_edit">
        <%= f.text_field :body %>
    </div>
    
    <br />
    <br />
    <%= f.button :save, :class=>'save_but' %>
    <%= button_tag "Undo Changes", :type => 'reset', :class=>'undo_change'%>    
<% end %>
</div>
</div>
