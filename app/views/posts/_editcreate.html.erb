<%= simple_form_for(@post)  do |f| %>
    <%= f.input :title %>
    <%= f.input :body %>
    <% if params[:edit] != "1" %>
        <%= f.label :public, class: "checkbox inline" do %>
            <%= f.check_box :public %>
            <span>Make your post visible to general public?</span>
            <div>(Otherwise only visible in University channel)</div>
          <% end %>
    <% end %>
    <%= f.submit  %>
    <% if params[:edit] == "1" %>
        <%= button_tag "Undo Changes", :type => 'reset' %>
    <% end %> 
<% end %>